generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Připojovací řetězec k databázi
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  routes    Route[]
  mapSettings MapSettings[]
}

enum Role {
  USER
  ADMIN
}

model Route {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  origin      String
  destination String
  distance    Float
  duration    Float
  routeData   Json
  createdAt   DateTime @default(now())
}

model MapSettings {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  mapStyle     String   @default("streets-v12")
  zoomLevel    Int      @default(4)
  routeColor   String   @default("#3b82f6")
  markerColor  String   @default("#FF0000")
}
